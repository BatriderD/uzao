<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_finish_design_work_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/DIMEN_15DP"
                android:layout_marginStart="@dimen/DIMEN_15DP" />

            <EditText
                android:id="@+id/tv_design_work_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_51DP"
                android:layout_marginTop="@dimen/DIMEN_15DP"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/work_name"
                android:imeOptions="actionNext"
                android:lines="1"
                android:maxLines="2"
                android:paddingEnd="@dimen/DIMEN_15DP"
                android:paddingStart="@dimen/DIMEN_15DP"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/DIMEN_14SP" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_marginEnd="@dimen/DIMEN_15DP"
                android:layout_marginStart="@dimen/DIMEN_15DP"
                android:layout_marginTop="-1dp"
                android:background="@color/separator_line" />

            <EditText
                android:id="@+id/tv_design_work_concept"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:background="@color/white"
                android:gravity="top"
                android:hint="@string/work_concept"
                android:imeOptions="actionDone"
                android:paddingEnd="@dimen/DIMEN_15DP"
                android:paddingStart="@dimen/DIMEN_15DP"
                android:paddingTop="@dimen/DIMEN_15DP"
                android:textColor="@color/grey"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/DIMEN_14SP" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/DIMEN_1PX"
                android:layout_marginEnd="@dimen/DIMEN_15DP"
                android:layout_marginStart="@dimen/DIMEN_15DP"
                android:layout_marginTop="-1dp"
                android:background="@color/separator_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_51DP"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingEnd="@dimen/DIMEN_15DP"
                    android:paddingStart="@dimen/DIMEN_15DP"
                    android:text="@string/see_only_me"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_14SP" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_only_self_see"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/DIMEN_15DP"
                    app:switchPadding="5dp"
                    app:theme="@style/SwitchCompat.Control"
                    app:thumbTextPadding="@dimen/DIMEN_15DP" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/save_work"
                    android:layout_width="82dp"
                    android:layout_height="@dimen/DIMEN_22DP"
                    android:layout_marginBottom="@dimen/DIMEN_30DP"
                    android:layout_marginEnd="@dimen/DIMEN_15DP"
                    android:layout_marginStart="@dimen/DIMEN_15DP"
                    android:layout_marginTop="@dimen/DIMEN_30DP"
                    android:background="@drawable/shape_order_btn_yellow"
                    android:gravity="center"
                    android:text="@string/save_work"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_13SP" />

                <TextView
                    android:id="@+id/use_on_carrier"
                    android:layout_width="82dp"
                    android:layout_height="@dimen/DIMEN_22DP"
                    android:layout_marginBottom="@dimen/DIMEN_30DP"
                    android:layout_marginEnd="@dimen/DIMEN_15DP"
                    android:layout_marginStart="@dimen/DIMEN_15DP"
                    android:layout_marginTop="@dimen/DIMEN_30DP"
                    android:background="@drawable/shape_order_btn_yellow"
                    android:gravity="center"
                    android:text="@string/use_on_carrier"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_13SP" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>