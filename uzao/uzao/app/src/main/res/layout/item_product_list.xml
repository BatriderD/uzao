<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <!--商品图片-->
    <ImageView
        android:id="@+id/iv_product_spu_image"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:paddingTop="@dimen/DIMEN_6DP"
        android:paddingBottom="@dimen/DIMEN_6DP"/>

    <!--商品名-->
    <TextView
        android:id="@+id/iv_product_spu_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_7DP"
        android:maxLines="1"
        android:paddingEnd="@dimen/DIMEN_10DP"
        android:ellipsize="end"
        android:paddingStart="@dimen/DIMEN_10DP"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_13SP" />

    <!--简介-->
    <TextView
        android:id="@+id/tv_product_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:paddingEnd="@dimen/DIMEN_10DP"
        android:paddingStart="@dimen/DIMEN_10DP"
        android:textColor="@color/black_produce"
        android:textSize="@dimen/DIMEN_9SP" />

    <!--标签-->
    <include layout="@layout/include_spu_tag"/>

    <!--价格-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_5DP"
        android:layout_marginStart="@dimen/DIMEN_10DP"
        android:layout_marginTop="@dimen/DIMEN_5DP"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="¥"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_12SP" />

        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_14SP" />
    </LinearLayout>
</LinearLayout>