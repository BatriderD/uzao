<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <!--背景图-->
    <ImageView
        android:id="@+id/iv_designer_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#66000000"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--头像-->
        <ImageView
            android:id="@+id/iv_designer_head"
            android:layout_width="@dimen/DIMEN_60DP"
            android:layout_height="@dimen/DIMEN_60DP" />
        <!--昵称-->
        <TextView
            android:id="@+id/iv_designer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_12SP" />
        <!--地区 职业 粉丝数-->
        <TextView
            android:id="@+id/iv_designer_region_profession_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_9SP" />

        <!--简介-->
        <LinearLayout
            android:id="@+id/ll_designer_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/DIMEN_2DP"
            android:layout_marginBottom="@dimen/DIMEN_5DP">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/DIMEN_3DP"
                android:text="简介:"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_12SP" />

            <TextView
                android:id="@+id/iv_designer_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是一个神秘的人 >"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_12SP" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_designer_reward"
                android:layout_width="@dimen/DIMEN_77DP"
                android:layout_height="@dimen/DIMEN_22DP"
                android:layout_marginEnd="@dimen/DIMEN_7DP"
                android:background="@drawable/shape_brand_bg_white_radius"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_designer_attention"
                android:layout_width="@dimen/DIMEN_77DP"
                android:layout_height="@dimen/DIMEN_22DP"
                android:layout_marginStart="@dimen/DIMEN_7DP"
                android:background="@drawable/shape_order_btn_yellow"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>