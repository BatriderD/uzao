<?xml version="1.0" encoding="UTF-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_content_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tool_bar_size"
            android:background="@color/color_black">

            <ImageView
                android:id="@+id/iv_design_material_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/DIMEN_13DP"
                android:src="@drawable/icon_back" />

            <ImageView
                android:id="@+id/iv_design_material_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="@dimen/DIMEN_15DP"
                android:src="@drawable/icon_next" />

            <TextView
                android:id="@+id/tool_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_tool"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_toolbar"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/iv_revocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/DIMEN_5DP"
                android:drawableTop="@drawable/icon_revocation"
                android:paddingBottom="@dimen/DIMEN_5DP"
                android:paddingEnd="@dimen/DIMEN_20DP"
                android:paddingStart="@dimen/DIMEN_20DP"
                android:paddingTop="@dimen/DIMEN_5DP"
                android:text="@string/bar_design_revocation"
                android:textColor="#404040"
                android:textSize="@dimen/DIMEN_9SP" />

            <TextView
                android:id="@+id/iv_grids"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/DIMEN_2DP"
                android:drawableTop="@drawable/icon_grids"
                android:paddingBottom="@dimen/DIMEN_5DP"
                android:paddingEnd="@dimen/DIMEN_20DP"
                android:paddingStart="@dimen/DIMEN_20DP"
                android:paddingTop="@dimen/DIMEN_5DP"
                android:text="@string/grids"
                android:textColor="#404040"
                android:textSize="@dimen/DIMEN_9SP" />

            <TextView
                android:id="@+id/iv_copy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/DIMEN_5DP"
                android:drawableTop="@drawable/icon_copy"
                android:paddingBottom="@dimen/DIMEN_5DP"
                android:paddingEnd="@dimen/DIMEN_20DP"
                android:paddingStart="@dimen/DIMEN_20DP"
                android:paddingTop="@dimen/DIMEN_5DP"
                android:text="@string/bar_design_copy"
                android:textColor="#404040"
                android:textSize="@dimen/DIMEN_9SP" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawablePadding="@dimen/DIMEN_5DP"
                android:drawableTop="@drawable/icon_save"
                android:paddingBottom="@dimen/DIMEN_5DP"
                android:paddingEnd="@dimen/DIMEN_20DP"
                android:paddingStart="@dimen/DIMEN_20DP"
                android:paddingTop="@dimen/DIMEN_5DP"
                android:src="@drawable/icon_save"
                android:text="@string/save"
                android:textColor="#404040"
                android:textSize="@dimen/DIMEN_9SP" />
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_tool"
            android:background="@color/white">


            <FrameLayout
                android:id="@+id/fl_on_carrier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </RelativeLayout>


        <LinearLayout
            android:id="@+id/ll_left_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_tool"
            android:layout_marginStart="@dimen/DIMEN_11DP"
            android:layout_marginTop="150dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_change_side"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/icon_change_side"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_10SP" />

                <ImageView
                    android:id="@+id/iv_change_side"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_5DP"
                    android:src="@drawable/icon_chang_side" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_technology"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/DIMEN_30DP"
                    android:text="@string/design_technology"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_10SP" />

                <ImageView
                    android:id="@+id/iv_technology"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_5DP"
                    android:src="@drawable/icon_technology" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sticker_text_adjust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_left_buttons"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/DIMEN_9DP"
                android:text="@string/text_orientation"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_10SP" />

            <ImageView
                android:id="@+id/iv_text_orientation_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_orientation_chang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/DIMEN_28DP"
                android:text="@string/word_space"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_10SP" />

            <ImageView
                android:id="@+id/iv_text_size_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_text_size_jia" />

            <ImageView
                android:id="@+id/iv_text_size_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_8DP"
                android:src="@drawable/icon_text_size_jian" />
        </LinearLayout>


        <!--底部按钮栏目-->
        <LinearLayout
            android:id="@+id/ll_design_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_50DP"
            android:layout_alignParentBottom="true"
            android:background="@color/color_black"
            android:orientation="horizontal">

            <!--增加图片-->


            <TextView
                android:id="@+id/tv_design_bar_picture"
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/DIMEN_6DP"
                android:drawableTop="@drawable/icon_add_pic"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:text="@string/bar_picture"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_11SP" />

            <!--文字-->


            <TextView
                android:id="@+id/tv_design_bar_text"
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/DIMEN_6DP"
                android:drawableTop="@drawable/design_bar_text_selector"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:text="@string/bar_text"
                android:textColor="@color/design_material_new_bar_text_selector"
                android:textSize="@dimen/DIMEN_11SP" />


            <TextView
                android:id="@+id/tv_design_bar_sticker"
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/DIMEN_6DP"
                android:drawableTop="@drawable/icon_materials"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:text="@string/bar_design_material"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_11SP" />


            <TextView
                android:id="@+id/tv_design_bar_catch_word"
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/DIMEN_6DP"
                android:drawableTop="@drawable/design_bar_text_catchword"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:text="@string/lxy"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_11SP" />


            <TextView
                android:id="@+id/tv_design_bar_layer"
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="@dimen/DIMEN_6DP"
                android:drawableTop="@drawable/design_bar_layer_selector"
                android:gravity="center_horizontal"
                android:paddingTop="8dp"
                android:text="@string/bar_design_layer"
                android:textColor="@color/design_material_new_bar_text_selector"
                android:textSize="@dimen/DIMEN_11SP" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1DP"
            android:layout_above="@id/ll_design_bar"
            android:background="#cccccc" />


        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_design_bar"
            android:layout_marginBottom="@dimen/DIMEN_1DP">

            <include
                layout="@layout/item_text_sticker_editor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                layout="@layout/item_img_sticker_editor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </FrameLayout>

        <com.zhaotai.uzao.widget.MultipleStatusView
            android:id="@+id/multiple_status_view"
            app:emptyView="@layout/vw_empty"
            app:errorView="@layout/vw_error"
            app:loadingView="@layout/vw_designer_loading"
            app:noNetworkView="@layout/vw_no_network_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_toolbar"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="127dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/DIMEN_50DP"
        android:layout_marginTop="@dimen/DIMEN_45DP"
        android:background="#cc3e3e3e">

        <TextView
            android:id="@+id/tv_clear_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/DIMEN_10DP"
            android:text="@string/clear_layer"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_13SP" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_clear_layer" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>