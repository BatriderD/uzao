<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/address_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/address_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="21dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="21dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#4a4a4a"
                    android:textSize="14sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginEnd="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#bbbbbb" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/ll_is_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkbox_is_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:button="@drawable/default_address_selector"/>

            <TextView
                android:id="@+id/is_default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="#4a4a4a"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/address_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/delete"
            android:text="@string/delete"
            android:textColor="#4a4a4a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_address_address_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/address_delete"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/edit"
            android:text="@string/edit"
            android:textColor="#4a4a4a"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:id="@+id/view_address_address_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_8DP"
        android:background="@color/pageBackGround" />
</LinearLayout>