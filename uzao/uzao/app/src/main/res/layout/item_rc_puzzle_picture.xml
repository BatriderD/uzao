<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_picture"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginEnd="@dimen/DIMEN_14DP"
        android:layout_marginStart="@dimen/DIMEN_14DP"
        android:layout_marginTop="@dimen/DIMEN_14DP"
        android:background="@color/coral_blue"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/iv_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_item_picture"
        android:layout_alignTop="@id/iv_item_picture"
        android:layout_marginRight="-14dp"
        android:layout_marginTop="-14dp"
        android:padding="@dimen/DIMEN_7DP"
        android:src="@drawable/ic_puzzle_del" />

</RelativeLayout>