<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/DIMEN_5DP"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_my_track_content"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_my_track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_my_track_content"
        android:layout_marginEnd="@dimen/DIMEN_8DP"
        android:layout_marginStart="@dimen/DIMEN_8DP"
        android:ellipsize="end"
        android:lines="1"
        android:maxLength="20"
        android:layout_marginTop="@dimen/DIMEN_8DP"
        android:textColor="#262626"
        android:textSize="@dimen/DIMEN_13SP" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_my_track_name"
        android:layout_marginBottom="@dimen/DIMEN_11DP"
        android:layout_marginTop="@dimen/DIMEN_8DP"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_track_price_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/DIMEN_8DP"
            android:gravity="bottom"
            android:text="Â¥"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_12SP" />

        <TextView
            android:id="@+id/tv_my_track_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_15SP" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_track_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_my_track_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/DIMEN_7DP"
            android:layout_marginTop="7dp"
            android:src="@drawable/my_track_icon_selector" />
    </LinearLayout>
</RelativeLayout>