<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_reward_price"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_45DP"
        android:visibility="gone">

        <include layout="@layout/dividing_lines_2" />

        <TextView
            android:id="@+id/tv_reward_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_12DP"
            android:text="打赏金额"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <TextView
            android:id="@+id/tv_reward_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_12DP"
            android:layout_toEndOf="@id/tv_reward_price1"
            android:text="%10"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_13SP" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_10DP"
        android:background="@color/pageBackGround" />

    <!--支付包-->
    <RelativeLayout
        android:id="@+id/rl_zfb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_12DP"
            android:drawablePadding="@dimen/DIMEN_10DP"
            android:drawableStart="@drawable/ic_zfb"
            android:gravity="center_vertical"
            android:text="@string/pay_way_zfb" />

        <ImageView
            android:id="@+id/iv_zfb_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_12DP"
            android:src="@drawable/icon_circle_selected" />
    </RelativeLayout>

    <include layout="@layout/dividing_lines_2" />
    <!--微信-->
    <RelativeLayout
        android:id="@+id/rl_wx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_12DP"
            android:drawablePadding="@dimen/DIMEN_10DP"
            android:drawableStart="@drawable/ic_wx"
            android:gravity="center_vertical"
            android:text="@string/pay_way_wx" />

        <ImageView
            android:id="@+id/iv_wx_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_12DP"
            android:src="@drawable/icon_circle_unselected" />
    </RelativeLayout>
</LinearLayout>
