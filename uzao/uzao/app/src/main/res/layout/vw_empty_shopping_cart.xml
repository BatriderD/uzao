<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackGround"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/DIMEN_20DP"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/empty_retry_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_state_empty_shopping_cart"
        android:layout_marginTop="@dimen/status_image_margin_top"/>

    <TextView
        android:id="@+id/empty_view_tv"
        style="@style/MultipleStatusView.Content"
        android:text="亲，人家心里空空哒" />

    <TextView
        android:id="@+id/empty_view_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_15DP"
        android:background="@drawable/shape_order_btn_yellow"
        android:paddingBottom="@dimen/DIMEN_7DP"
        android:paddingEnd="@dimen/DIMEN_16DP"
        android:paddingStart="16dp"
        android:paddingTop="@dimen/DIMEN_7DP"
        android:text="去逛逛"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_14SP" />
</LinearLayout>