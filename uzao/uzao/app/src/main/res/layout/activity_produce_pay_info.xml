<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pageBackGround"
    android:orientation="vertical">

    <include layout="@layout/toolbar_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!--交易号-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_48DP"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:layout_marginStart="@dimen/DIMEN_15DP">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/produce_pay_no"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />

            <TextView
                android:id="@+id/tv_produce_pay_order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />
        </RelativeLayout>

        <include layout="@layout/dividing_lines_2" />
        <!--支付方式-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_48DP"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:layout_marginStart="@dimen/DIMEN_15DP">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/produce_pay_way"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />

            <TextView
                android:id="@+id/tv_produce_pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />
        </RelativeLayout>

        <include layout="@layout/dividing_lines_2" />
        <!--支付时间-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_48DP"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:layout_marginStart="@dimen/DIMEN_15DP">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/produce_pay_time"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />

            <TextView
                android:id="@+id/tv_produce_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>