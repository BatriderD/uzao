<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_order_multi_goods_horizontal_pic1"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="12dp"/>

    <ImageView
        android:id="@+id/iv_order_multi_goods_horizontal_pic2"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_order_multi_goods_horizontal_pic1"/>

    <ImageView
        android:id="@+id/iv_order_multi_goods_horizontal_pic3"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/iv_order_multi_goods_horizontal_pic2"/>

    <TextView
        android:id="@+id/iv_order_multi_goods_horizontal_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_alignBottom="@id/iv_order_multi_goods_horizontal_pic1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"/>
    
    <View
        android:id="@+id/view_cut_line"
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/separator_line"
        android:layout_marginStart="12dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>