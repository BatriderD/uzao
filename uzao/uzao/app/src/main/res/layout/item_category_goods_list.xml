<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/DIMEN_10DP"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_45DP"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_activity_icon"
            android:layout_width="50dp"
            android:layout_height="@dimen/DIMEN_22DP"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/DIMEN_12DP" />
    </LinearLayout>

    <include layout="@layout/dividing_lines_1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--商品图片-->
        <ImageView
            android:id="@+id/iv_activity_spu_image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginBottom="@dimen/DIMEN_11DP"
            android:layout_marginStart="@dimen/DIMEN_12DP"
            android:layout_marginTop="@dimen/DIMEN_15DP" />

        <!--商品名字-->
        <TextView
            android:id="@+id/iv_activity_spu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:layout_marginTop="@dimen/DIMEN_15DP"
            android:layout_toEndOf="@id/iv_activity_spu_image"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <!--标签-->
        <LinearLayout
            android:id="@+id/ll_activity_tag"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/iv_activity_spu_image"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:layout_toEndOf="@id/iv_activity_spu_image"
            android:gravity="center_vertical"
            android:orientation="horizontal" />


        <!--设计师-->
        <TextView
            android:id="@+id/tv_activity_designer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_activity_tag"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:layout_toEndOf="@id/iv_activity_spu_image"
            android:textColor="#959595"
            android:textSize="11sp" />

        <!--价格-->
        <TextView
            android:id="@+id/tv_activity_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_activity_designer"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:layout_toEndOf="@id/iv_activity_spu_image"
            android:textColor="#202020"
            android:textSize="12sp" />


    </RelativeLayout>
</LinearLayout>