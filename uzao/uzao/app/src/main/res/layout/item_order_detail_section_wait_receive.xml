<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"

        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        <!--包裹-->
        <TextView
            android:id="@+id/tv_order_detail_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_12SP"/>

        <!--待收货倒计时-->
        <TextView
            android:id="@+id/tv_order_detail_package_remaining_receiveTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_10SP"
            android:layout_toEndOf="@id/tv_order_detail_package"/>

        <!--状态-->
        <TextView
            android:id="@+id/tv_order_detail_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_12SP"/>
    </RelativeLayout>

    <include layout="@layout/dividing_lines_1"/>
</LinearLayout>