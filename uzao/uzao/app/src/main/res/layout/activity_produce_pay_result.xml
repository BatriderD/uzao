<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_normal" />

    <ImageView
        android:id="@+id/iv_produce_pay_result_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_50DP"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tv_produce_pay_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_30DP"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_18SP" />

    <Button
        android:id="@+id/btn_produce_pay_result"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_50DP"
        android:background="@drawable/shape_order_btn_yellow"
        android:gravity="center"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/DIMEN_15DP"
        android:text="如有你问或需帮助,请进入帮助中心或联系4000000"
        android:textColor="@color/grey"
        android:textSize="@dimen/DIMEN_12SP" />
</LinearLayout>