<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--活动优惠-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:text="@string/activity_cut"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <TextView
            android:id="@+id/tv_pay_confirm_order_activity_cut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="35dp"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/DIMEN_15DP"
        android:background="@color/separator_line" />

    <!--优惠券-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:text="@string/coupons"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <TextView
            android:id="@+id/tv_pay_confirm_coupons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:drawableEnd="@drawable/right_arrow"
            android:drawablePadding="@dimen/DIMEN_8DP"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/DIMEN_15DP"
        android:background="@color/separator_line" />

    <!--支付方式选择-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:text="@string/pay_way"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <ImageView
            android:id="@+id/tv_pay_confirm_pay_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_8DP"
            android:layout_toStartOf="@+id/tv_pay_confirm_pay_way"
            android:src="@drawable/zfb" />

        <TextView
            android:id="@+id/tv_pay_confirm_pay_way"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:drawableEnd="@drawable/right_arrow"
            android:drawablePadding="@dimen/DIMEN_8DP"
            android:gravity="center_vertical"
            android:text="@string/pay_way_zfb"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/DIMEN_15DP"
        android:background="@color/separator_line" />

    <!--小计-->
    <TextView
        android:id="@+id/tv_pay_confirm_order_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP"
        android:background="@color/white"
        android:gravity="center_vertical|end"
        android:paddingEnd="@dimen/DIMEN_15DP"
        android:paddingStart="@dimen/DIMEN_15DP"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_13SP" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_15DP"
        android:background="@color/pageBackGround" />

</LinearLayout>