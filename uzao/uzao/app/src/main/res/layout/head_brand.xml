<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#77000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--头像-->
        <ImageView
            android:id="@+id/iv_brand_head"
            android:layout_width="@dimen/DIMEN_56DP"
            android:layout_height="@dimen/DIMEN_56DP" />
        <!--昵称-->
        <TextView
            android:id="@+id/iv_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <!--粉丝-->
        <TextView
            android:id="@+id/iv_brand_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_10SP" />

        <!--简介-->
        <LinearLayout
            android:id="@+id/ll_brand_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/DIMEN_3DP"
                android:text="简介:"
                android:textColor="@color/white"
                android:textSize="@dimen/DIMEN_12SP" />

            <TextView
                android:id="@+id/iv_brand_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="这是一个神秘的品牌 >"
                android:textSize="@dimen/DIMEN_12SP" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_5DP"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_brand_discuss"
                android:layout_width="@dimen/DIMEN_77DP"
                android:layout_height="@dimen/DIMEN_22DP"
                android:layout_marginEnd="@dimen/DIMEN_7DP"
                android:background="@drawable/shape_brand_bg_white_radius"
                android:gravity="center"
                android:text="讨论专区"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_brand_attention"
                android:layout_width="@dimen/DIMEN_77DP"
                android:layout_height="@dimen/DIMEN_22DP"
                android:layout_marginStart="@dimen/DIMEN_7DP"
                android:background="@drawable/shape_order_btn_yellow"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>