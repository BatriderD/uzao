<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_banner_home_fifth"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_item_fifth_icon"
        android:layout_width="@dimen/DIMEN_38DP"
        android:layout_height="@dimen/DIMEN_38DP"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/DIMEN_14DP"
        android:layout_marginTop="10dp"
        android:contentDescription="null" />

    <TextView
        android:id="@+id/tv_item_fifth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_item_fifth_icon"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/iv_item_fifth_separator"
        android:layout_width="@dimen/DIMEN_1DP"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@color/yellow"
        android:contentDescription="null" />
</RelativeLayout>