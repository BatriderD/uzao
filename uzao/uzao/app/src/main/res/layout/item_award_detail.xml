<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/DIMEN_12DP"
    android:layout_marginStart="12dp"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/DIMEN_8DP"
            android:layout_marginStart="@dimen/DIMEN_8DP">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户昵称"
                    android:textColor="#989898"
                    android:textSize="@dimen/DIMEN_12SP" />

                <TextView
                    android:id="@+id/tv_invite_detail_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_12SP" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="返点时间"
                    android:textColor="#989898"
                    android:textSize="@dimen/DIMEN_12SP" />

                <TextView
                    android:id="@+id/tv_invite_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_12SP" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/DIMEN_1DP"
                android:layout_alignParentBottom="true"
                android:background="@color/separator_line" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/DIMEN_10DP"
            android:paddingTop="@dimen/DIMEN_10DP">
            <!--返点-->
            <LinearLayout
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invite_detail_rebate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAA783"
                    android:textSize="@dimen/DIMEN_26SP" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_5DP"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="返点"
                        android:textColor="#9a9a9a"
                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_1DP"
                android:layout_height="@dimen/DIMEN_30DP"
                android:background="#d9d9d9" />

            <!--返点金额-->
            <LinearLayout
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invite_detail_rebate_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAA783"
                    android:textSize="@dimen/DIMEN_26SP" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_5DP"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="返点金额"
                        android:textColor="#9a9a9a"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/DIMEN_3DP"
                        android:includeFontPadding="false"
                        android:text="(元)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/DIMEN_10SP" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/DIMEN_1DP"
                android:layout_height="@dimen/DIMEN_30DP"
                android:background="#d9d9d9" />

            <!--结算金额-->
            <LinearLayout
                android:layout_width="@dimen/DIMEN_0DP"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invite_detail_close_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#CAA783"
                    android:textSize="@dimen/DIMEN_26SP" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_5DP"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="结算金额"
                        android:textColor="#9a9a9a"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/DIMEN_3DP"
                        android:includeFontPadding="false"
                        android:text="(元)"
                        android:textColor="@color/red"
                        android:textSize="@dimen/DIMEN_10SP" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>