<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_item_image_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_popular_design_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="@dimen/DIMEN_12DP"
        android:layout_marginStart="12dp"
        android:background="@drawable/shape_bg_item_popular_design_view_pager_bottom_tab">

        <!--销量-->
        <TextView
            android:id="@+id/tv_popular_design_sale_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_11DP"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <!--收藏数-->
        <TextView
            android:id="@+id/tv_popular_design_collect_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_16DP"
            android:layout_toEndOf="@id/tv_popular_design_sale_count"
            android:drawablePadding="@dimen/DIMEN_5DP"
            android:drawableStart="@drawable/ic_material_un_collect"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <!--设计师名字-->
        <TextView
            android:id="@+id/tv_popular_design_designer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/DIMEN_27DP"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        <!--设计师头像-->
        <ImageView
            android:id="@+id/iv_popular_design_designer_pic"
            android:layout_width="@dimen/DIMEN_30DP"
            android:layout_height="@dimen/DIMEN_30DP"
            android:layout_centerVertical="true"
            android:layout_marginEnd="9dp"
            android:layout_toStartOf="@id/tv_popular_design_designer_name" />
    </RelativeLayout>

</LinearLayout>