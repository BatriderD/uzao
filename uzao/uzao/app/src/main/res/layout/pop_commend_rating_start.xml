<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pop_tv_all_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/DIMEN_12DP"
        android:text="全部评价"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_12SP" />

    <!--星级评价-->
    <com.zhaotai.uzao.widget.RatingBar
        android:id="@+id/rb_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_comment_pic"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/DIMEN_4DP"
        android:layout_toEndOf="@id/tv_comment_pic"
        app:clickable="false"
        app:image_height="22dp"
        app:image_padding="3dp"
        app:image_width="22dp"
        app:star_count="5"
        app:star_img="@drawable/ic_star_show"
        app:unstar_img="@drawable/ic_star_hide" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/DIMEN_12DP"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pop_tv_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/DIMEN_5DP"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_12SP" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="条"
            android:textColor="@color/grey"
            android:textSize="@dimen/DIMEN_12SP" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_2PX"
        android:layout_alignParentTop="true"
        android:background="@color/separator_line" />

</RelativeLayout>