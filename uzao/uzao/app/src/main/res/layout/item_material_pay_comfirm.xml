<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="@dimen/DIMEN_15DP"
    android:paddingEnd="@dimen/DIMEN_12DP"
    android:paddingStart="@dimen/DIMEN_12DP"
    android:paddingTop="@dimen/DIMEN_15DP">
    <!--图片-->
    <ImageView
        android:id="@+id/iv_product_pic"
        android:layout_width="@dimen/DIMEN_85DP"
        android:layout_height="@dimen/DIMEN_85DP" />

    <!--商品名称-->
    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/DIMEN_20DP"
        android:layout_toEndOf="@id/iv_product_pic"
        android:maxLines="2"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_13SP" />

    <!--商品 设计师-->
    <TextView
        android:id="@+id/tv_product_designer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/DIMEN_20DP"
        android:layout_toEndOf="@id/iv_product_pic"
        android:maxLines="1"
        android:textColor="@color/grey"
        android:textSize="@dimen/DIMEN_11SP" />

    <!--价格-->
    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_product_pic"
        android:layout_marginStart="@dimen/DIMEN_20DP"
        android:layout_toEndOf="@id/iv_product_pic"
        android:textColor="@color/red"
        android:textSize="@dimen/DIMEN_13SP" />
</RelativeLayout>