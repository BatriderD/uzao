<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:background="@drawable/ic_dashed_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_12DP"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zhaotai.uzao.view.RoundImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/DIMEN_54DP"
                android:layout_height="@dimen/DIMEN_54DP" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/DIMEN_10DP"
                android:layout_toEndOf="@id/iv_head"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_14SP"
                    tools:text="我叫xx" />

                <TextView
                    android:id="@+id/tv_product_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_3DP"
                    android:textColor="@color/black_produce"
                    android:textSize="@dimen/DIMEN_12SP"
                    tools:text="我设计了1万件" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_attention"
                android:layout_width="@dimen/DIMEN_78DP"
                android:layout_height="@dimen/DIMEN_26DP"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_btn_stock_grey_red_selector"
                android:gravity="center"
                android:text="关注"
                android:textColor="@color/selector_text_white_red" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_about_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_10DP"
            android:layout_marginTop="@dimen/DIMEN_10DP"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="@dimen/DIMEN_12SP" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_13DP"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_design_1"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@color/pageBackGround" />

            <ImageView
                android:id="@+id/iv_design_2"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_marginEnd="@dimen/DIMEN_9DP"
                android:layout_marginStart="@dimen/DIMEN_9DP"
                android:layout_weight="1"
                android:background="@color/pageBackGround" />

            <ImageView
                android:id="@+id/iv_design_3"
                android:layout_width="0dp"
                android:layout_height="112dp"
                android:layout_weight="1"
                android:background="@color/pageBackGround" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/DIMEN_15DP"
            android:text="MORE   >"
            android:textColor="@color/editor_switch_selected" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_1DP"
            android:background="@drawable/ic_dashed_line" />
    </RelativeLayout>

</LinearLayout>