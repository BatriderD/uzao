<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_size"
        android:layout_marginTop="@dimen/DIMEN_10DP">

        <ImageView
            android:id="@+id/iv_tool_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingEnd="@dimen/DIMEN_15DP"
            android:paddingStart="@dimen/DIMEN_15DP"
            android:scaleType="center"
            android:src="@drawable/back_black" />

        <TextView
            android:id="@+id/tv_tool_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="商品详情"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/separator_line" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/empty_retry_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_state_empty" />

        <TextView
            android:id="@+id/empty_view_tv"
            style="@style/MultipleStatusView.Content"
            android:text="很抱歉，您查看的商品已经下架" />

        <TextView
            android:id="@+id/empty_view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/DIMEN_15DP"
            android:background="@drawable/shape_order_btn_yellow"
            android:paddingBottom="@dimen/DIMEN_7DP"
            android:paddingEnd="@dimen/DIMEN_16DP"
            android:paddingStart="16dp"
            android:paddingTop="@dimen/DIMEN_7DP"
            android:textColor="@color/white"
            android:textSize="@dimen/DIMEN_14SP"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>