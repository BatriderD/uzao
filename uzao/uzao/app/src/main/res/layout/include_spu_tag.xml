<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_spu_tag"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/DIMEN_10DP"
    android:layout_marginTop="@dimen/DIMEN_5DP"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_spu_tag_activity"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:background="@drawable/shape_bg_tag"
        android:gravity="center"
        android:paddingEnd="@dimen/DIMEN_6DP"
        android:paddingStart="@dimen/DIMEN_6DP"
        android:textColor="#fc5900"
        android:textSize="@dimen/DIMEN_9SP"
        android:layout_marginEnd="@dimen/DIMEN_8DP"/>

    <TextView
        android:id="@+id/tv_spu_tag_design"
        android:layout_width="wrap_content"
        android:layout_height="13dp"
        android:background="@drawable/shape_bg_tag"
        android:gravity="center"
        android:paddingEnd="@dimen/DIMEN_6DP"
        android:paddingStart="@dimen/DIMEN_6DP"
        android:textColor="#fc5900"
        android:textSize="@dimen/DIMEN_9SP" />
</LinearLayout>