<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_design_detail_img"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_15DP">

                <View
                    android:id="@+id/view_design_detail_name_line"
                    android:layout_width="@dimen/DIMEN_3DP"
                    android:layout_height="@dimen/DIMEN_15DP"
                    android:layout_marginEnd="@dimen/DIMEN_15DP"
                    android:layout_marginStart="@dimen/DIMEN_15DP"
                    android:background="@color/yellow" />
                <!--作品名称-->
                <TextView
                    android:id="@+id/tv_design_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/DIMEN_15DP"
                    android:layout_toEndOf="@id/view_design_detail_name_line"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_14SP" />
                <!--发布时间-->
                <TextView
                    android:id="@+id/tv_design_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_design_detail_name"
                    android:layout_below="@id/tv_design_detail_name"
                    android:layout_marginTop="@dimen/DIMEN_10DP"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/DIMEN_12SP" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_30DP">

                <View
                    android:id="@+id/view_design_detail_idea_line"
                    android:layout_width="@dimen/DIMEN_3DP"
                    android:layout_height="@dimen/DIMEN_15DP"
                    android:layout_marginEnd="@dimen/DIMEN_15DP"
                    android:layout_marginStart="@dimen/DIMEN_15DP"
                    android:background="@color/yellow" />
                <!--设计理念-->
                <TextView
                    android:id="@+id/tv_design_detail_idea_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/DIMEN_15DP"
                    android:layout_toEndOf="@id/view_design_detail_idea_line"
                    android:maxLines="1"
                    android:text="@string/design_idear"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_14SP" />
                <!--理念-->
                <TextView
                    android:id="@+id/tv_design_detail_idea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/tv_design_detail_idea_text"
                    android:layout_below="@id/tv_design_detail_idea_text"
                    android:layout_marginTop="@dimen/DIMEN_10DP"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/DIMEN_12SP" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>