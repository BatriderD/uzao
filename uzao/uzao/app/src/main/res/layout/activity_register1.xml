<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_login_white" />


    <LinearLayout
        android:id="@+id/ll_register_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/DIMEN_19DP"
        android:layout_marginStart="@dimen/DIMEN_19DP"
        android:layout_marginTop="@dimen/DIMEN_90DP"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_register_phone_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/DIMEN_10DP"
            android:paddingEnd="@dimen/DIMEN_30DP"
            android:paddingStart="@dimen/DIMEN_0DP"
            android:paddingTop="@dimen/DIMEN_10DP"
            android:textColor="@color/login_text_key"
            android:textSize="@dimen/DIMEN_13SP" />

        <EditText
            android:id="@+id/et_register_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"
            android:paddingBottom="@dimen/DIMEN_10DP"
            android:paddingTop="@dimen/DIMEN_10DP"
            android:textColor="@color/login_text_value"
            android:textColorHint="@color/login_text_value_hint"
            android:textSize="@dimen/DIMEN_13SP" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:layout_marginLeft="@dimen/DIMEN_15DP"
        android:layout_marginRight="@dimen/DIMEN_15DP"
        android:layout_marginTop="@dimen/DIMEN_3DP"
        android:background="@color/separator_line" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_39DP"
        android:layout_marginLeft="@dimen/DIMEN_15DP"
        android:layout_marginRight="@dimen/DIMEN_15DP"
        android:layout_marginTop="@dimen/DIMEN_50DP"
        android:background="@drawable/shape_btn_bg"
        android:text="@string/next_step"
        android:textColor="@color/white"
        android:textSize="@dimen/DIMEN_15SP" />
</LinearLayout>