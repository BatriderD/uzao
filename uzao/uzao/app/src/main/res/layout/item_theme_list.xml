<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_theme_pic"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/tv_theme_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_15DP"
        android:layout_marginEnd="@dimen/DIMEN_8DP"
        android:layout_marginStart="@dimen/DIMEN_8DP"
        android:layout_marginTop="@dimen/DIMEN_11DP"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_15SP" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/DIMEN_8DP"
        android:layout_marginStart="@dimen/DIMEN_8DP">

        <TextView
            android:id="@+id/tv_theme_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/DIMEN_4DP"
            android:drawableStart="@drawable/icon_comment"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/tab_unselected_text"
            android:textSize="@dimen/DIMEN_10SP" />

        <TextView
            android:id="@+id/tv_theme_visited"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/DIMEN_4DP"
            android:drawableStart="@drawable/ic_eye"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/tab_unselected_text"
            android:textSize="@dimen/DIMEN_10SP" />

        <TextView
            android:id="@+id/tv_theme_collected"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/DIMEN_4DP"
            android:drawableStart="@drawable/ic_material_un_collect"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="12"
            android:textColor="@color/tab_unselected_text"
            android:textSize="@dimen/DIMEN_10SP" />


    </LinearLayout>

</LinearLayout>