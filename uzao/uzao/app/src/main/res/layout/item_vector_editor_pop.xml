<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_vector_editor_del_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP">

        <TextView
            android:id="@+id/tv_vector_editor_del_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/del_pic"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_vector_editor_del_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_7DP"
            android:layout_toRightOf="@id/tv_vector_editor_del_pic"
            android:src="@drawable/ic_check_right"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_vector_editor_del_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP">

        <TextView
            android:id="@+id/tv_vector_editor_del_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/del_text"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_vector_editor_del_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_7DP"
            android:layout_toRightOf="@id/tv_vector_editor_del_text"
            android:src="@drawable/ic_check_right"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_vector_editor_del_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP">

        <TextView
            android:id="@+id/tv_vector_editor_del_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/del_all"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_vector_editor_del_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_7DP"
            android:layout_toRightOf="@id/tv_vector_editor_del_all"
            android:src="@drawable/ic_check_right"
            android:visibility="gone" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1PX"
        android:background="@color/separator_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_50DP">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/DIMEN_0DP"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <View
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="match_parent"
            android:background="@color/separator_line" />

        <TextView
            android:id="@+id/sure"
            android:layout_width="@dimen/DIMEN_0DP"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sure"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>