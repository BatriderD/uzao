<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="@dimen/DIMEN_85DP"
        android:layout_height="@dimen/DIMEN_85DP"
        android:layout_marginStart="@dimen/DIMEN_15DP">

        <ImageView
            android:id="@+id/iv_order_goods_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12.5dp"
        android:orientation="vertical"
        android:paddingEnd="@dimen/DIMEN_15DP"
        android:paddingStart="@dimen/DIMEN_15DP">

        <!--商品名-->
        <TextView
            android:id="@+id/tv_order_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--商品规格-->
            <TextView
                android:id="@+id/tv_order_goods_properties"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/DIMEN_10DP"
                android:maxLines="1"
                android:textColor="@color/grey"
                android:textSize="@dimen/DIMEN_11SP" />

            <!--数量-->
            <TextView
                android:id="@+id/tv_order_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_14SP" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <!--金额-->
            <TextView
                android:id="@+id/tv_order_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_14SP" />

            <!--申请售后-->
            <TextView
                android:id="@+id/tv_order_detail_after_sales"
                android:layout_width="@dimen/DIMEN_80DP"
                android:layout_height="@dimen/DIMEN_20DP"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="@string/apply_after_sales"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_12SP"
                android:visibility="gone" />

            <!--授权时长-->
            <TextView
                android:id="@+id/tv_material_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_12SP"
                android:visibility="gone" />

            <!--活动-->
            <ImageView
                android:id="@+id/tv_order_activity"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/DIMEN_8DP"
                android:maxWidth="@dimen/DIMEN_80DP" />
        </RelativeLayout>

        <View
            android:id="@+id/tv_order_bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:background="#d9d9d9" />
    </LinearLayout>


</LinearLayout>