<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_60DP"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_technology"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_item_technology_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item_technology"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/DIMEN_16DP"
            android:layout_marginStart="@dimen/DIMEN_20DP"
            android:src="@drawable/icon_technology_selector" />

        <TextView
            android:id="@+id/tv_item_technology"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:paddingEnd="@dimen/DIMEN_0DP"
            android:paddingStart="@dimen/DIMEN_16DP"
            android:textColor="#666666"
            android:textSize="@dimen/DIMEN_15SP" />
    </LinearLayout>

    <View
        android:id="@+id/item_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_1DP"
        android:layout_marginEnd="@dimen/DIMEN_16DP"
        android:layout_marginStart="@dimen/DIMEN_16DP"
        android:background="@color/bg_page_gray" />

</LinearLayout>
