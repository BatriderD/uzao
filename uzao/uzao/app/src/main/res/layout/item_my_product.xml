<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <!--item分割-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_15DP"
        android:background="@color/pageBackGround" />

    <!--商品信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/iv_my_product_goods_image"
            android:layout_width="@dimen/DIMEN_85DP"
            android:layout_height="@dimen/DIMEN_85DP"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/DIMEN_15DP" />

        <!--商品名-->
        <TextView
            android:id="@+id/tv_my_product_goods_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_my_product_goods_image"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:layout_toEndOf="@id/iv_my_product_goods_image"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />


        <!--金额-->
        <TextView
            android:id="@+id/tv_my_product_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_my_product_goods_image"
            android:layout_marginStart="@dimen/DIMEN_15DP"
            android:layout_toEndOf="@id/iv_my_product_goods_image"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <!--商品状态-->
        <TextView
            android:id="@+id/tv_my_product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_my_product_goods_image"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/DIMEN_15DP"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_13SP" />

    </RelativeLayout>

    <View
        android:id="@+id/tv_my_product_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/DIMEN_15DP"
        android:background="@color/separator_line" />
    <!--审核不通过原因-->
    <LinearLayout
        android:id="@+id/ll_my_product_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/DIMEN_15DP"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_my_product_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingBottom="@dimen/DIMEN_10DP"
            android:paddingEnd="15dp"
            android:paddingTop="@dimen/DIMEN_10DP"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_12SP" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/separator_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_product_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_46DP"
        android:gravity="center_vertical|end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_product_bottom_left_button"
            android:layout_width="@dimen/DIMEN_80DP"
            android:layout_height="@dimen/DIMEN_22DP"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:background="@drawable/shape_order_btn"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <TextView
            android:id="@+id/tv_my_product_bottom_middle_button"
            android:layout_width="@dimen/DIMEN_80DP"
            android:layout_height="@dimen/DIMEN_22DP"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:background="@drawable/shape_order_btn"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />

        <TextView
            android:id="@+id/tv_my_product_bottom_right_button"
            android:layout_width="@dimen/DIMEN_80DP"
            android:layout_height="@dimen/DIMEN_22DP"
            android:layout_marginEnd="@dimen/DIMEN_15DP"
            android:background="@drawable/shape_button_line_circle_red"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/DIMEN_13SP" />
    </LinearLayout>
</LinearLayout>
