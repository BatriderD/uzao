<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tool_bar_size"
        android:background="@color/white">

        <ImageView
            android:id="@+id/tool_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingEnd="@dimen/DIMEN_15DP"
            android:paddingStart="@dimen/DIMEN_15DP"
            android:scaleType="center"
            android:src="@drawable/back_black" />

        <TextView
            android:id="@+id/tool_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <!--搜索-->
        <ImageView
            android:id="@+id/iv_material_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:paddingEnd="@dimen/DIMEN_12DP"
            android:paddingStart="@dimen/DIMEN_8DP"
            android:scaleType="center"
            android:src="@drawable/icon_search_black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/separator_line" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_collect_product"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="商品"
                android:textColor="@color/selector_text_black_gray"
                android:textSize="@dimen/DIMEN_16SP" />

            <View
                android:id="@+id/v_product_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignEnd="@id/tv_collect_product"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/tv_collect_product"
                android:background="@color/red" />
        </RelativeLayout>

        <View
            android:layout_width="@dimen/DIMEN_1DP"
            android:layout_height="@dimen/DIMEN_9DP"
            android:layout_gravity="center_vertical"
            android:background="#CBCBCB" />

        <RelativeLayout
            android:id="@+id/rl_material"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_collect_material"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:gravity="center"
                android:text="素材"
                android:textColor="@color/selector_text_black_gray"
                android:textSize="@dimen/DIMEN_16SP" />

            <View
                android:id="@+id/v_material_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignEnd="@id/tv_collect_material"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@id/tv_collect_material"
                android:background="@color/red" />
        </RelativeLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/fm_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/DIMEN_3DP"
        android:layout_marginStart="@dimen/DIMEN_3DP" />


</LinearLayout>
