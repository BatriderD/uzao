<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bg_item_more"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_34DP"
        android:layout_gravity="end"
        android:paddingEnd="@dimen/DIMEN_12DP"
        android:src="@drawable/close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建主题"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_16SP" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="@dimen/DIMEN_12DP"
        android:layout_marginStart="@dimen/DIMEN_12DP"
        android:layout_marginTop="@dimen/DIMEN_25DP"
        android:background="@drawable/shape_rec_line_grey_dark"
        android:hint="请输入主题名称"
        android:maxLines="1"
        android:paddingStart="@dimen/DIMEN_12DP"
        android:textColor="@color/black"
        android:textSize="@dimen/DIMEN_12SP" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/DIMEN_15DP"
        android:layout_marginTop="@dimen/DIMEN_25DP"
        android:background="@drawable/shape_order_btn_yellow"
        android:gravity="center"
        android:text="@string/sure"
        android:textColor="@color/white" />
</LinearLayout>