<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/DIMEN_12DP"
        android:paddingStart="@dimen/DIMEN_12DP">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:background="@color/home_item_image_bg">
            <!--商品-->
            <ImageView
                android:id="@+id/iv_inspiration_gallery_spu_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/DIMEN_10DP"
                android:paddingBottom="@dimen/DIMEN_10DP"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/DIMEN_12DP"
                android:src="@drawable/icon_pin_red" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/DIMEN_6DP"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/DIMEN_0DP"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <!--素材-->
                    <ImageView
                        android:id="@+id/iv_inspiration_gallery_material_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_75DP"
                        android:paddingTop="@dimen/DIMEN_5DP"
                        android:paddingBottom="@dimen/DIMEN_5DP"
                        android:background="@color/home_item_image_bg" />
                    <!--绿色别针-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/DIMEN_5DP"
                        android:src="@drawable/icon_pin_green" />
                </FrameLayout>

                <View
                    android:layout_width="@dimen/DIMEN_5DP"
                    android:layout_height="@dimen/DIMEN_1DP" />

                <FrameLayout
                    android:layout_width="@dimen/DIMEN_0DP"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <!--载体-->
                    <ImageView
                        android:id="@+id/iv_inspiration_gallery_model_1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/DIMEN_75DP"
                        android:paddingTop="@dimen/DIMEN_5DP"
                        android:paddingBottom="@dimen/DIMEN_5DP"
                        android:background="@color/home_item_image_bg" />

                    <!--橙色别针-->
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/DIMEN_5DP"
                        android:src="@drawable/icon_pin_orange" />
                </FrameLayout>
            </LinearLayout>

            <!--名字-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/DIMEN_8DP"
                android:background="@drawable/shape_inspiration_gallery_line"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_inspiration_gallery_spu_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/DIMEN_20DP"
                    android:layout_marginTop="@dimen/DIMEN_10DP"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/shape_inspiration_gallery_circle_red"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_14SP"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_inspiration_gallery_material_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/DIMEN_20DP"
                    android:layout_marginTop="@dimen/DIMEN_2DP"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/shape_inspiration_gallery_circle_green"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_13SP" />

                <TextView
                    android:id="@+id/tv_inspiration_gallery_model_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/DIMEN_20DP"
                    android:layout_marginTop="@dimen/DIMEN_2DP"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/shape_inspiration_gallery_circle_orange"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_12SP" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_20DP"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/DIMEN_12DP"
        android:paddingStart="@dimen/DIMEN_12DP">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="horizontal">

                <!--素材-->
                <ImageView
                    android:id="@+id/iv_inspiration_gallery_material_2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/DIMEN_75DP"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/DIMEN_5DP"
                    android:paddingBottom="@dimen/DIMEN_5DP"
                    android:background="@color/home_item_image_bg" />

                <View
                    android:layout_width="@dimen/DIMEN_5DP"
                    android:layout_height="@dimen/DIMEN_1DP" />

                <!--载体-->
                <ImageView
                    android:id="@+id/iv_inspiration_gallery_model_2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/DIMEN_75DP"
                    android:layout_weight="1"
                    android:paddingTop="@dimen/DIMEN_5DP"
                    android:paddingBottom="@dimen/DIMEN_5DP"
                    android:background="@color/home_item_image_bg" />
            </LinearLayout>

            <!--名字-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/DIMEN_12DP"
                android:background="@drawable/shape_inspiration_gallery_line"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_inspiration_gallery_spu_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/DIMEN_20DP"
                    android:layout_marginTop="@dimen/DIMEN_10DP"
                    android:drawablePadding="10dp"
                    android:drawableStart="@drawable/shape_inspiration_gallery_circle_red"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_14SP"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_inspiration_gallery_name_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/DIMEN_5DP"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_12SP" />
            </LinearLayout>
        </LinearLayout>

        <!--商品-->
        <ImageView
            android:id="@+id/iv_inspiration_gallery_spu_2"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:layout_marginStart="@dimen/DIMEN_6DP"
            android:layout_weight="1"
            android:paddingTop="@dimen/DIMEN_10DP"
            android:paddingBottom="@dimen/DIMEN_10DP"
            android:background="@color/home_item_image_bg" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_10DP"
        android:layout_marginTop="@dimen/DIMEN_15DP"
        android:background="@color/pageBackGround" />
</LinearLayout>

