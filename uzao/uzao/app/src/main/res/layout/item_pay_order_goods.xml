<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_pay_confirm_spu_image"
        android:layout_width="@dimen/DIMEN_85DP"
        android:layout_height="@dimen/DIMEN_85DP"
        android:layout_marginStart="@dimen/DIMEN_15DP"
        android:contentDescription="@null" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_85DP"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingEnd="@dimen/DIMEN_15DP"
            android:paddingStart="@dimen/DIMEN_15DP">

            <!--商品名-->
            <TextView
                android:id="@+id/tv_pay_confirm_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />

            <!--商品规格-->
            <TextView
                android:id="@+id/tv_pay_confirm_properties"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_5DP"
                android:maxLines="2"
                android:textColor="@color/grey"
                android:textSize="@dimen/DIMEN_11SP" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!--金额-->
                <TextView
                    android:id="@+id/tv_pay_confirm_spu_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_13SP" />

                <!--活动-->
                <ImageView
                    android:id="@+id/tv_pay_confirm_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/DIMEN_20DP"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@null" />

                <!--数量-->
                <TextView
                    android:id="@+id/tv_confirm_order_child_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_pay_confirm_spu_price"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/DIMEN_13SP" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/tv_pay_confirm_bottom_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:background="#d9d9d9" />
    </RelativeLayout>
</LinearLayout>