<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/DIMEN_15DP"
        android:layout_marginStart="@dimen/DIMEN_15DP"
        android:orientation="horizontal">
        <!--订单编号-->
        <TextView
            android:id="@+id/tv_make_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />
        <!--复制-->
        <TextView
            android:id="@+id/tv_make_order_copy"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_order_btn"
            android:gravity="center"
            android:text="@string/click_copy"
            android:textColor="@color/black"
            android:textSize="@dimen/DIMEN_13SP" />
    </RelativeLayout>

    <include layout="@layout/dividing_lines_1" />

    <LinearLayout
        android:id="@+id/ll_make_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/DIMEN_15DP">
            <!--商品图片-->
            <ImageView
                android:id="@+id/tv_make_order_spu_img"
                android:layout_width="@dimen/DIMEN_85DP"
                android:layout_height="@dimen/DIMEN_85DP" />
            <!--商品名字-->
            <TextView
                android:id="@+id/tv_make_order_spu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/DIMEN_15DP"
                android:layout_toEndOf="@id/tv_make_order_spu_img"
                android:textColor="@color/black"
                android:textSize="@dimen/DIMEN_13SP" />
            <!--商品分类-->
            <TextView
                android:id="@+id/tv_make_order_spu_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_make_order_spu_img"
                android:layout_marginStart="@dimen/DIMEN_15DP"
                android:layout_toEndOf="@id/tv_make_order_spu_img"
                android:textColor="@color/grey"
                android:textSize="@dimen/DIMEN_13SP" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/DIMEN_15DP"
            android:layout_marginTop="@dimen/DIMEN_15DP"
            android:paddingEnd="@dimen/DIMEN_35DP"
            android:paddingStart="@dimen/DIMEN_35DP">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="@dimen/DIMEN_45DP"
                android:layout_marginStart="45dp"
                android:layout_marginTop="@dimen/DIMEN_10DP"
                android:background="@color/separator_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_make_state_img1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_make_normal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_13DP"
                        android:text="基本信息"
                        android:textColor="@color/black"
                        android:textSize="@dimen/DIMEN_13SP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_make_state_img2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_make_normal" />

                    <TextView
                        android:id="@+id/iv_make_state_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_13DP"
                        android:text="生产确认"
                        android:textColor="@color/black"
                        android:textSize="@dimen/DIMEN_13SP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_make_state_img3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_make_normal" />

                    <TextView
                        android:id="@+id/iv_make_state_text3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_13DP"
                        android:text="生产信息"
                        android:textColor="@color/black"
                        android:textSize="@dimen/DIMEN_13SP" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_make_state_img4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_make_normal" />

                    <TextView
                        android:id="@+id/iv_make_state_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/DIMEN_13DP"
                        android:text="合同确认"
                        android:textColor="@color/black"
                        android:textSize="@dimen/DIMEN_13SP" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/pageBackGround" />

</LinearLayout>