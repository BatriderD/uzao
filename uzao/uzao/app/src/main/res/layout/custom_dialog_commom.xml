<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_round_white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="@dimen/DIMEN_39DP"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="确定删除该图层？"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/cancel_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:src="@drawable/icon_layer_close" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_25DP"
        android:layout_below="@id/content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/DIMEN_25DP"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/DIMEN_91DP"
            android:layout_height="match_parent"
            android:background="@drawable/custom_sure_dialog_left"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/submit"
            android:layout_width="@dimen/DIMEN_91DP"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/DIMEN_15DP"
            android:background="@drawable/custom_sure_dialog_right"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </LinearLayout>

</RelativeLayout>