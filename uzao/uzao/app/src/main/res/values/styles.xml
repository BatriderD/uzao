<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/pageBackGround</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
        <item name="colorControlActivated">@color/red</item>
    </style>

    <style name="bottom_pop" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>

    <style name="PopupAnimaFade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/basepopup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/basepopup_fade_out</item>
    </style>

    <style name="MultipleStatusViewStyle">
        <item name="emptyView">@layout/vw_empty</item>
        <item name="errorView">@layout/vw_error</item>
        <item name="loadingView">@layout/vw_loading</item>
        <item name="noNetworkView">@layout/vw_no_network_view</item>
    </style>

    <style name="MultipleStatusViewStyleNoEmpty">
        <item name="errorView">@layout/vw_error</item>
        <item name="loadingView">@layout/vw_loading</item>
        <item name="noNetworkView">@layout/vw_no_network_view</item>
    </style>

    <style name="Theme.AppStartLoadTranslucent" parent="Theme.AppCompat.DayNight">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MultipleStatusView" />

    <style name="MultipleStatusView.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">#959595</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MultipleStatusBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/shape_order_btn_yellow</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingEnd">14dp</item>
        <item name="android:paddingStart">14dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="SlidingTabLayoutStyle">
        <item name="tl_indicator_color">#000</item>
        <item name="tl_indicator_width_equal_title">true</item>
        <item name="tl_tab_space_equal">true</item>
        <item name="tl_textSelectColor">#000</item>
        <item name="tl_textUnselectColor">#555</item>
    </style>

    <style name="SwitchCompat.Control" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/green</item>

    </style>

    <style name="SwitchCompat.Design.White" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/editor_switch_selected</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/white</item>

    </style>

    <style name="SwitchCompat.Text" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9dp</item>
    </style>

    <style name="AppThemeDialogIsTranslucent" parent="Theme.AppCompat.Dialog">

    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">35dp</item>
    </style>

    <style name="CommonDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
    </style>

    <!--下拉刷新-->
    <style name="Refresh">
        <item name="srlEnableLoadMore">false</item>
    </style>

</resources>
